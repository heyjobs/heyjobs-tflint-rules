# Make - Build automation
brew "make"

# golangci-lint - Go linters aggregator
brew "golangci-lint"

# pre-commit - Git hooks framework
brew "pre-commit"

# mise - Go environment manager
brew "mise"

# direnv - Environment variable manager
brew "direnv"
